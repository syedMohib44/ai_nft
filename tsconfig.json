{
  "compilerOptions": {
    "module": "CommonJS",
    "typeRoots": [
      "api/utils/@types",
      "node_modules/@types",
    ],
    "esModuleInterop": true,
    "target": "ES2020",
    "noImplicitAny": true,
    "moduleResolution": "node",
    "sourceMap": true,
    "outDir": "dist",
    "strict": true
  },
  "include": ["api"],
  "exclude": [
    "node_modules",
    "**/*.spec.ts",
    "api/test"
  ]
}